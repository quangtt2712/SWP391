@page
@model OldCarShowroomNetworkRazorPages.Pages.Admin.DashboardModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- font awesome -->
    <script defer src="https://kit.fontawesome.com/330a21053c.js" crossorigin="anonymous"></script>
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
          rel="stylesheet">
    <!-- data table -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/dashboardMain.css">
</head>

<body>
    <!--  -->
    <!-- left side -->
    <div class="left_side">
        <div class="nav_bar">

            <div class="logo">
                <i style="font-size:30px;" class="fa fa-car me-3"></i>
            </div>
            <div class="nav_container">
                <!-- item navigation-->
                <div class="nav_item active">
                    <a href="#">
                        <i class="fa-solid fa-house" style="color: #d1d3d7;"></i>
                    </a>
                </div>

                <!-- item navigation -->
                <div class="nav_item">
                    <a href="#">
                        <i class="fa-solid fa-list-check" style="color: #d1d3d7;"></i>
                    </a>

                </div>
            </div>
            <div>
                <div class="nav_item">
                    <a href="/Index">
                        <i class="fa-solid fa-arrow-right-from-bracket" style="color: #d1d3d7;"></i>
                    </a>

                </div>

            </div>
        </div>
    </div>


    <!-- right side -->
    <div class="right_side">
        <div class="content">
            <div class="left_content">
                <h2>Overview</h2>
                <div class="overview_container">
                    <div class="overview_item">
                        <div class="overview_item_header">
                            <span>Đã bán</span>
                            <i class="fa fa-car me-3 overview_icon"></i>
                        </div>
                        <div class="overview_item_body">
                            <div id="sold_count"class="item_data"></div>
                        </div>
                    </div>
                    <div class="overview_item">
                        <div class="overview_item_header">
                            <span>Doanh thu</span>
                            <i class="fa-solid fa-money-bill overview_icon"></i>
                        </div>
                        <div class="overview_item_body">
                            <div id="revenue_count" class="item_data"></div>
                        </div>
                    </div>
                    <div class="overview_item">
                        <div class="overview_item_header">
                            <span>Số lượng showroom</span>
                            <i class="fa-brands fa-product-hunt overview_icon"></i>
                        </div>
                        <div class=" overview_item_body">
                            <div id="showroom_count" class="item_data"></div>
                        </div>
                    </div>
                </div>
                <!-- chart -->
                <div class="chart_container">
                    <div class="line_chart_box">
                        <i class="fa-solid fa-chart-line chart_icon"></i>
                        <h3 style="margin-bottom: 20px;">Doanh thu tiền hoa hồng bán xe theo tháng </h3>
                        <canvas id="line_chart"></canvas>
                    </div>
                </div>
            </div>
            <!-- right content --> 
        </div>
    </div>

    

    <!-- <div id="overlay"></div> -->
</body>
<!-- jquery -->
<script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM="
        crossorigin="anonymous"></script>
<!-- data table -->
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<!-- chart js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- line chart -->
<script src="/js/dashboardMainLineChart.js"></script>
<!-- bar chart -->
<script src="/js/dashboardMainBarChart.js"></script>
<script src="/js/dashboardBrandBarChart.js"></script>
<!-- data table js -->
<script src="/js/dashboardMainDataTable.js"></script>
<!-- js event -->
<script src="/js/dashboardMainHandleEvent.js"></script>
<!-- sweet alert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/dashboardMainSweetAlert.js"></script>

</html>