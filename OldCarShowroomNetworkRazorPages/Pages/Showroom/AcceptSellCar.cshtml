@page
@model OldCarShowroomNetworkRazorPages.Pages.Showroom.AcceptSellCarModel
@using System.ComponentModel.DataAnnotations;
@{
}
<h1>Xác nhận bán xe</h1>

<h3>Bạn muốn xác nhận bán x</h3>
<div>
    <form method="post">
        <input id="carId" name="carId" type="hidden" asp-for="Car.CarId" />
        <input type="hidden" id="UserName" name="UserName" asp-for="Booking.Username">
        <h4>Xe @Model.Car.ManufactoryNavigation.ManufactoryName @Model.Car.CarNameNavigation.CarName1 @Model.Car.CarModelYearNavigation.CarModelYear1</h4>
        <hr />
        <dl class="row">
            <div class="form-group">
                <dt class="col-sm-2">
                    Người kí gửi xe
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Car.UsernameNavigation.FullName)
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    SĐT
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Car.UsernameNavigation.Phone)
                </dd>
            </div>
            <div class="form-group">
            <dt class="col-sm-2">
                Người mua xe
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Booking.UsernameNavigation.FullName)
            </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    SĐT
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Booking.UsernameNavigation.Phone)
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Showroom
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Car.Showroom.ShowroomName)
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Ngày
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Booking.DayBooking.Value.ToString("dd/MM/yyyy"))
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Thời gian xem xe
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Booking.SlotNavigation.PickupDate) - @Html.DisplayFor(model => model.Booking.SlotNavigation.ReturnDate)
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Giá mong muốn
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Car.MaxPrice)
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Giá tối thiểu
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Car.MinPrice)
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Số tiền mua xe
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Money" type="number" placeholder="Nhập số tiền mua xe" />
                </dd>
                @if (Model.Msg != null)
                {
                    <p style="color: red">@Model.Msg</p>
                }
            </div>
        </dl>
        <div class="form-group">
            <input type="submit" value="Xác nhận xe đã bán" class="btn btn-primary" />
        </div>
    </form>
    <a asp-page="./ListUserBooking"> Quay lại trang chủ</a>
</div>