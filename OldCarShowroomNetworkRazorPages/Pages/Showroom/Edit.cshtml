@page
@model OldCarShowroomNetworkRazorPages.Pages.Showroom.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa</h1>

<h4>Showroom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Showroom.ShowroomId" />
            <div class="form-group">
                <label asp-for="Showroom.ShowroomName" class="control-label"></label>
                <input asp-for="Showroom.ShowroomName" class="form-control" />
                <span asp-validation-for="Showroom.ShowroomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showroom.Address" class="control-label"></label>
                <input asp-for="Showroom.Address" class="form-control" />
                <span asp-validation-for="Showroom.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showroom.Phone" class="control-label"></label>
                <input asp-for="Showroom.Phone" class="form-control" />
                <span asp-validation-for="Showroom.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showroom.Website" class="control-label"></label>
                <input asp-for="Showroom.Website" class="form-control" />
                <span asp-validation-for="Showroom.Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageShowroom.Url" class="control-label">Ảnh showroom chính</label>
                @if (Model.ImageShowroom != null)
                {
                    <div id="currentImage">
                        <img src="@Url.Content(Model.ImageShowroom.Url)" alt="Current Image" class="img-thumbnail" />
            </div>
                }
                <input type="file" id="uploadimgmain" name="uploadimgmain" accept="image/*"/>
                
            </div>
            <div class="form-group">
                <label asp-for="ImageShowroom.Url" class="control-label">Ảnh showroom phụ</label>
                @if (Model.ImageShowrooms != null && Model.ImageShowrooms.Count > 0)
                {
                    foreach (var image in Model.ImageShowrooms)
                    {
                        <div id="currentImage">

                            <img src="@Url.Content(image.Url)" alt="Current Image" class="img-thumbnail" />

                        </div>
                    }
                }
                <input type="file" id="uploadimg" name="uploadimg" accept="image/*" />
                
            </div>
          

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
