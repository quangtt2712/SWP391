@page
@model OldCarShowroomNetworkRazorPages.Pages.Showroom.DeleteUserBookingModel
@{
}
<h1>Xác nhận xóa lịch khách xem xe</h1>
@if (Model.Msg1 != null)
{
    <p style="color: red">@Model.Msg1</p>
}else{
<h3>Bạn vẫn muốn xóa lịch xem xe</h3>
<div>
    <form method="post">
        <input type="hidden" id="Username" name="Username" asp-for="@Model.booking.Username" />
        <input type="hidden" id="carId" name="carId" asp-for="@Model.booking.CarId" />
        <hr />
        <dl class="row">
            <div class="form-group">
                <dt class="col-sm-2">
                    Tên xe
                </dt>
                <dd class="col-sm-10">
                    @Model.booking.Car.ManufactoryNavigation.ManufactoryName @Model.booking.Car.CarNameNavigation.CarName1 @Model.booking.Car.CarModelYearNavigation.CarModelYear1
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Khách xem xe
                </dt>
                <dd class="col-sm-10">
                    @Model.booking.UsernameNavigation.FullName
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    SĐT của khách
                </dt>
                <dd class="col-sm-10">
                    @Model.booking.UsernameNavigation.Phone
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Ngày xem xe
                </dt>
                <dd class="col-sm-10">
                    @Model.booking.DayBooking.Value.ToString("dd/MM/yyyy")
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Thời gian xem xe
                </dt>
                <dd class="col-sm-10">
                    @Model.booking.SlotNavigation.PickupDate - @Model.booking.SlotNavigation.ReturnDate
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Showroom
                </dt>
                <dd class="col-sm-10">
                    @Model.booking.Car.Showroom.ShowroomName
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-2">
                    Lý do
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Note" type="text" placeholder="Nhập lý do" />
                </dd>
                @if (Model.Msg != null)
                {
                    <p style="color: red">@Model.Msg</p>
                }
            </div>
        </dl>
        <input type="submit" value="Xóa lịch đặt" class="btn btn-danger" />
    </form>
</div>
}
<div><a asp-page="./ListUserBooking">Quay lại</a></div>