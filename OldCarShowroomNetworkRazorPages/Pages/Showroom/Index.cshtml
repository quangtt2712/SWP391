@page
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor

@model OldCarShowroomNetworkRazorPages.Pages.Showroom.IndexModel


@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách các showroom</h1>
<p>
    <a asp-page="Create">Thêm showroom</a>
</p>
                

<table class="table">
    <thead>
        <tr>
            <th>
                Tên Showroom
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Website
            </th>
            <th>
                Ảnh
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Showroom)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowroomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="@item.Image.Url" alt="Ảnh showroom" width="100">
                    }
                </td>
                
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ShowroomId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ShowroomId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ShowroomId">Delete</a>
                    </td>
                
            </tr>
        }
    </tbody>
</table>
