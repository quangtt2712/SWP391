@page
@model OldCarShowroomNetworkRazorPages.Pages.BookingModel
@{
}
<div>
    <form method ="post">
    <h4>Xe @Model.Car.ManufactoryNavigation.ManufactoryName @Model.Car.CarNameNavigation.CarName1 @Model.Car.CarModelYearNavigation.CarModelYear1</h4>
    <hr />
    <dl class="row">
        <div class="form-group">
            <dt class="col-sm-2">
                Họ và tên 
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.FullName)
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                SĐT
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Phone)
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                Showroom
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Showroom.ShowroomName)
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                SĐT Showroom
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Showroom.Phone)
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                Địa chỉ
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Showroom.Address)
            </dd>
        </div>
            <dt class="col-sm-2">
                Phường
            </dt>
        <div class="form-group">
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Showroom.WardsNavigation.Name)
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                Quận
            </dt>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                Thành Phố
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Showroom.District.Name)
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                Hệ thống nạp nhiên liệu:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Car.Showroom.City.Name)
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                Ngày
            </dt>
            <dd class="col-sm-10">
                <input type="date" asp-for="@Model.dateTime" placeholder="Chọn ngày tháng">
            </dd>
        </div>
        <div class="form-group">
            <dt class="col-sm-2">
                Thời gian xem xe
            </dt>
            @foreach (var item in Model.Slot)
                {
                if (item.IsBooked == true)
                {
                    <tr>
                        <td>
                            <input name="@item.SlotId" disabled="">
                                @Html.HiddenFor(modelItem => item.SlotId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PickupDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                                <input id="SlotId" name="SlotId" asp-for="@item.SlotId" type="checkbox">
                                @Html.HiddenFor(modelItem => item.SlotId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PickupDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                        </td>
                    </tr>
                }
            }
        </div>
    </dl>
        <div class="form-group">
            <input type="submit" value="Đặt lịch xem xe" class="btn btn-primary" />
            <a asp-page="/Index"> Quay lại trang chủ</a>
        </div>>
    </form>
</div>

